  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "build:packages": "pnpm -r --filter='./packages/*' run build",
    "build:plugins": "pnpm -r --filter='./plugins/*' run build",
    "build": "pnpm run build:packages && pnpm run build:plugins",
    "changesets": "changeset",
